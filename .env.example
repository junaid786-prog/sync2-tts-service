# Sync2 TTS Service - Environment Configuration
# Copy to .env and modify as needed

# Server settings
TTS_HOST=0.0.0.0
TTS_PORT=8765

# Model settings
TTS_MODEL=kokoro
TTS_DEFAULT_VOICE=af_sarah

# Audio settings (usually no need to change)
# TTS_INPUT_SAMPLE_RATE=24000
# TTS_OUTPUT_SAMPLE_RATE=8000
# TTS_CHUNK_DURATION_MS=40

# Performance settings
TTS_USE_GPU=true
TTS_MAX_CONCURRENT=10
TTS_TIMEOUT=30

# Caching
TTS_CACHE_ENABLED=true
TTS_CACHE_MAX_SIZE=1000

# Logging
TTS_LOG_LEVEL=INFO
